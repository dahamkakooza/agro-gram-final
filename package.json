{
  "name": "agro-gram-frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:farmer\" \"npm run dev:consumer\"",
    "dev:farmer": "cd apps/farmer-dashboard && npm run dev",
    "dev:consumer": "cd apps/consumer-marketplace && npm run dev",
    "build": "npm run build:farmer && npm run build:consumer",
    "build:farmer": "cd apps/farmer-dashboard && npm run build",
    "build:consumer": "cd apps/consumer-marketplace && npm run build",
    "install:all": "npm install && cd apps/farmer-dashboard && npm install && cd ../../apps/consumer-marketplace && npm install",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}